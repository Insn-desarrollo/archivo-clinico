@* Vista Principal *@
@{
    Layout = "_Layout";
}

<div class="ordenes-content">
    <div class="d-flex align-items-center">
        <h3 class="me-3">Ordenes en Linea</h3>
    </div>

    @Html.Partial("_FormOrdenes")
    @Html.Partial("_TablaAteOrdenes")
</div>

<div id="modalDetalleOrden" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog modal-fullscreen" role="document">
        <div class="modal-content">
            <div class="bg-banner text-white d-flex align-items-center py-2 px-3">
                <h2 class="d-flex align-items-center me-auto">
                    <i class="material-icons me-2">personal_injury</i>&nbsp; Ordenes en Linea
                </h2>
                <div class="d-flex align-items-center ms-auto">
                    <div class="button-group d-flex">
                        <button id="btnConsultas" class="btn btn-opciones-generales btn-outline-info d-flex flex-column align-items-center mx-1 mb-1 responsive-btn" type="button" onclick="btnActualizarOrden()">
                            <i class="material-icons">autorenew</i>
                            <span>Recargar</span>
                        </button>
                        <button id="btnFormatos" class="btn btn-opciones-generales btn-outline-info d-flex flex-column align-items-center mx-1 mb-1 responsive-btn" type="button" onclick="btnFormatos()">
                            <i class="material-icons">print</i>
                            <span>Formatos</span>
                        </button>
                        <button id="btnSalir" class="btn btn-opciones-generales btn-outline-danger d-flex flex-column align-items-center mx-1 mb-1 responsive-btn" data-bs-dismiss="modal">
                            <i class="material-icons">exit_to_app</i>
                            <span>Salir</span>
                        </button>
                    </div>
                </div>
            </div>
                    
            <div class="modal-body" style="overflow: auto; max-height: calc(100vh - 50px);">
                <div id="loadingEvaluacion" class="d-none position-fixed top-0 start-0 w-100 h-100 bg-light bg-opacity-75 text-center" style="z-index: 1050;">
                    <div class="position-absolute top-50 start-50 translate-middle">
                        <div class="spinner-border text-primary" role="status">
                            <span class="sr-only">Cargando...</span>
                        </div>
                        <p class="mt-2">Cargando Evaluaciones...</p>
                    </div>
                </div>
                <iframe id="iframeDetalleOrden" src="" frameborder="0" style="width: calc(100% - 20px); height: 98%; border: none; margin: 0 10px;"></iframe>
            </div>
        </div>
    </div>
</div>
