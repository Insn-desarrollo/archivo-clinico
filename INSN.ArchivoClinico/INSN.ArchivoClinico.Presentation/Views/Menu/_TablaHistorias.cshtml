@* _TablaAtenciones.cshtml *@
<div id="loadingOverlay" class="d-none position-fixed top-0 start-0 w-100 h-100 bg-light bg-opacity-75 text-center" style="z-index: 1050;">
    <div class="position-absolute top-50 start-50 translate-middle">
        <div class="spinner-border text-primary" role="status">
            <span class="sr-only">Cargando...</span>
        </div>
        <p class="mt-2">Cargando resultados...</p>
    </div>
</div>

<div class="mb-2">
    <div class="row">
        <div class="table-responsive">
            <table class="table table-striped table-sm">
                <thead class="header-grilla text-white text-center" style="background-color: rgba(74, 144, 226, 1)">
                    <tr>
                        <th rowspan="2">Codigo</th>
                        <th rowspan="2">Historia Clinica</th>
                        <th rowspan="2">Documento de Identidad</th>
                        <th rowspan="2">Paciente</th>
                        <th rowspan="2">Fecha Nacimiento</th>
                        <th rowspan="2">Tipo Sexo</th>
                        <th rowspan="2">Direccion</th>
                        <th rowspan="2">Correo</th>
                        <th rowspan="2">Estado</th>                        
                        <th rowspan="2">Acciones</th>
                    </tr>                
                </thead>
                <tbody style="font-family: 'Open Sans', sans-serif;">
                </tbody>
            </table>
        </div>


        <div id="MensajeNoResultados" class="alert alert-info" style="display:none;">
            No se encontraron resultados.
        </div>
    </div>
</div>

<!-- Controles de paginación -->
@Html.Partial("_PaginationPartial")



