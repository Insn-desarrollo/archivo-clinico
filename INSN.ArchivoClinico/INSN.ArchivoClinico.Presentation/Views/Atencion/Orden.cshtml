                            <label for="FechaNacimiento" class="col-form-label">Fecha de Nacimiento</label>
                            <input type="text" class="form-control" id="FechaNacimiento" name="FechaNacimiento" value="@Model.fecha_nacimiento" readonly>
                        </div>
