                                        <td class="text-center">@evaluacion.fecha_evaluacion</td>
                                        <td class="text-center">@evaluacion.hora_evaluacion</td>
                                        <td class="text-center">@evaluacion.receta_estado</td>
                                        <td class="text-center">@evaluacion.orden_estado</td>
