                            <label for="ServicioIngresoEESS" class="col-form-label">Servicio Ingreso</label>
                            <input type="text" class="form-control" id="ServicioIngresoEESS" name="ServicioIngresoEESS" value="@Model.servicio_ingreso_eess" readonly>
                        </div>
